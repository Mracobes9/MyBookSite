<div class="row">
    <div class="col-md-4">
    
    </div>
    <div class="col-md-4 comment_body <%=!comment.is_moderate ? "unmoderate" : "moderate"%>" id="comment_<%=comment.id%>">
        <p class="author"><%= "#{comment.user.second_name} #{comment.user.name}"%></p>
        <p class="text"><%= comment.text%></p>
        <%if user_signed_in? && (comment.user.id == current_user.id || current_user.admin)%>
            <%= link_to 'Изменить', edit_comment_path(comment), remote:true%>
            <%= link_to 'Удалить',comment_path(comment), method: :delete%>
        <%end%>
    </div>
    <div class="col-md-4">
    
    </div>
</div>