<div class="row">
    <div class="col-md-4">

    </div>
    <div class="col-md-4 comment_body <%=getCommentStatus(comment)%>" id="comment_<%=comment.id%>">
        <p class="author"><%= getFIOAuthor(comment)%></p>
        <p class="text"><%= comment.text%></p>
        <%if correct_user?(comment)%>
            <%= link_to 'Изменить', edit_comment_path(comment), remote:true%>
            <%= link_to 'Удалить',comment_path(comment), method: :delete%>
        <%end%>
    </div>
    <div class="col-md-4">

    </div>
</div>
