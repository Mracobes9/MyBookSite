<div class="row">
    <div class="col-md-4">
    
    </div>
    <div class="col-md-4">
        <%= form_for @comment do |f|%>
            <div class="form-group">
                <%= f.label :text, "Оставить отзыв"%><br>
                <%=text_area_tag(:text, @comment.text, size: "70x6") %>
            </div>
            <%if current_user.admin%>
                <div class="form-group">
                    <%=f.label :is_moderate, "Отзыв корректен?"%>
                    <%=f.check_box :is_moderate%>
                </div>
            <%end%>
            <div class="form-group">
                <%= hidden_field_tag(:id, params[:id]) %>
                <%= submit_tag "Подтвердить" %>
            </div>
        <%end%>
    </div>
    <div class="col-md-4">
    
    </div>
</div>