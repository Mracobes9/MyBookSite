<div class="row">
    <div class="col-md-4">

    </div>
    <div class="col-md-4">
      <%if @is_edit%>
        <%= form_for @comment, url:book_comment_path(book_id:@comment.book_id,id:@comment.id), method: "put" do |f|%>
            <div class="form-group">
                <%= f.label :text, "Оставить отзыв"%><br>
                <%= f.text_area(:text, size: "70x6") %>
            </div>
            <%if current_user.admin%>
                <div class="form-group">
                    <%=f.label :is_moderate, "Отзыв корректен?"%>
                    <%=f.check_box :is_moderate%>
                </div>
            <%end%>
            <div class="form-group">
                <%= hidden_field_tag(:id, params[:id]) %>
                <%= f.submit "Подтвердить" %>
            </div>
        <%end%>
      <%else%>
            <%= form_for @comment, url:book_comments_path(book_id: @book.id), method: "create" do |f|%>
            <div class="form-group">
                <%= f.label :text, "Оставить отзыв"%><br>
                <%= f.text_area(:text, size: "70x6") %>
            </div>
            <%if current_user.admin%>
                <div class="form-group">
                    <%=f.label :is_moderate, "Отзыв корректен?"%>
                    <%=f.check_box :is_moderate%>
                </div>
            <%end%>
            <div class="form-group">
                <%= hidden_field_tag(:id, params[:id]) %>
                <%= f.submit "Подтвердить" %>
            </div>
        <%end%>
      <%end%>


    </div>
    <div class="col-md-4">

    </div>
</div>
