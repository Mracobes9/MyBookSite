<h2 class="text-center"> Изменить пароль</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "text-center" }) do |f| %>
  <%= devise_error_messages! %>
  <%= f.hidden_field :reset_password_token %>

  <div class="field form-group">
    <%= f.label :password, "Новый пароль" %><br />
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> символов требуется)</em><br />
    <% end %>
    <%= f.password_field :password, autofocus: true, autocomplete: "off" %>
  </div>

  <div class="field form-group">
    <%= f.label :password_confirmation, "Подтвердить пароль" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="actions form-group">
    <%= f.submit "Изменить пароль" %>
  </div>
<% end %>
<div class="text-center">
<%= render "devise/shared/links" %>
</div>
